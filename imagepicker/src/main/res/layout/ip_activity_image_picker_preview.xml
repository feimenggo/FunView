<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:background="#2A2A2A"
    tools:context=".ui.ImagePickerPreviewActivity">

    <ImageView
        android:id="@id/back"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:src="#abc2e4" />

    <ImageView
        android:id="@id/check"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_gravity="right"
        android:gravity="center"
        android:src="#abc2e4" />

    <com.feimeng.imagepicker.ui.widget.HackyViewPager
        android:id="@id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="125dp"
        android:background="#000000"
        android:overScrollMode="never" />

    <HorizontalScrollView
        android:id="@id/scroll"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="49dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="4dp"
            tools:ignore="UselessLeaf" />
    </HorizontalScrollView>

    <TextView
        android:id="@id/select"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="已选9张"
        android:textColor="#9C9C9C"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@id/confirm"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/selector_picker_picture_preview_confirm"
        android:enabled="false"
        android:gravity="center"
        android:text="确定"
        android:textColor="@drawable/selector_picker_picture_preview_confirm"
        android:textSize="13sp"
        android:textStyle="bold" />
</FrameLayout>